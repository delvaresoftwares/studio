rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to create a contact document through the form
    match /contacts/{contactId} {
      allow create: if true;
      // TEMPORARY: Allow read/delete for testing. In production, use Firebase Admin SDK.
      allow read, delete, update: if true;
    }

    // Allow anyone to create an estimation document
    match /estimations/{estimationId} {
      allow create: if true;
      // TEMPORARY: Allow read/delete for testing. In production, use Firebase Admin SDK.
      allow read, delete, update: if true;
    }
  }
}